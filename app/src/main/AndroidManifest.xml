<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="name.marinchenko.lorryvision">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activities.main.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.main.VideoActivity"
            android:label="@string/activity_video"
            android:parentActivityName=".view.activities.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.main.MainActivity" />
        </activity>
        <activity
            android:name=".view.activities.info.InstructionActivity"
            android:label="@string/activity_instruction"
            android:parentActivityName=".view.activities.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.main.MainActivity" />
        </activity>
        <activity
            android:name=".view.activities.info.AboutActivity"
            android:label="@string/activity_about"
            android:parentActivityName=".view.activities.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.main.MainActivity" />
        </activity>
        <activity
            android:name=".view.activities.info.LicenseActivity"
            android:label="@string/activity_license"
            android:parentActivityName=".view.activities.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.main.MainActivity" />
        </activity>
        <activity
            android:name=".view.activities.main.SettingsActivity"
            android:label="@string/activity_settings"
            android:parentActivityName=".view.activities.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.main.MainActivity" />
        </activity>
        <activity
            android:name=".view.activities.web.FeedbackActivity"
            android:label="@string/activity_feedback"
            android:parentActivityName=".view.activities.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.main.MainActivity" />
        </activity>
    </application>

</manifest>