<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_gravity="fill"
        android:gravity="center_vertical"
        android:text="@string/textview_lorry"
        android:textSize="30sp"
        android:layout_width="225dp" />

    <ImageButton
        android:id="@+id/settings_button"
        android:src="@drawable/button_settings_icon"
        android:layout_row="0"
        android:layout_column="1"
        android:contentDescription="@string/button_settings"
        android:onClick="toSettings" />


    <CheckBox
        android:id="@+id/autoconnect_checkbox"
        android:layout_gravity="fill_horizontal"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="@string/checkbox_autoconnect"
        android:textSize="22sp"
        android:onClick="setAutoConnect"
        android:layout_width="267dp" />

    <TextView
        android:id="@+id/updateInfo_text"
        android:layout_gravity="fill_horizontal"
        android:layout_height="40dp"
        android:layout_columnSpan="2"
        android:text="@string/textview_updateinfo"
        android:textAlignment="center"
        android:textSize="22sp" />

    <Button
        android:id="@+id/findNet_button"
        android:layout_gravity="fill_horizontal"
        android:layout_height="80dp"
        android:layout_columnSpan="2"
        android:text="@string/button_find"
        android:textSize="30sp"
        android:textAlignment="center"
        android:onClick="updateNets" />
    
    <ListView
        android:id="@+id/netList"
        android:layout_gravity="fill"
        android:layout_columnSpan="2">
    </ListView>

</GridLayout>