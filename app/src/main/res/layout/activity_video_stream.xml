<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_video_stream"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="3"
    android:orientation="vertical"
    tools:context="ru.marinchenko.lorry.activities.VideoStreamActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageButton
            android:layout_height="fill_parent"
            android:layout_width="64dp"
            android:id="@+id/test_disconnect"
            android:src="@drawable/button_disconnect"
            android:contentDescription="test_disconnect"
            android:onClick="testDisconnect"
            />

        <ImageButton
            android:layout_height="fill_parent"
            android:layout_width="64dp"
            android:id="@+id/test_reconnect"
            android:src="@drawable/button_reconnect"
            android:contentDescription="test_reconnect"
            android:onClick="testReconnect"
            />

    </LinearLayout>

    <VideoView
        android:id="@+id/videoView"
        android:layout_gravity="fill"
        android:layout_height="448dp" />

    <Button
        android:id="@+id/button_exitvideo"
        android:layout_gravity="fill"
        android:text="@string/button_exitvideo"
        android:textSize="30sp"
        android:textAlignment="center"
        android:onClick="exit"/>

</GridLayout>
