<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/netList_item_image"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="64dp"
        android:src="@drawable/button_net_wifi" />

    <TextView
        android:id="@+id/netList_item_name"
        android:text="@string/listview_noNets"
        android:textSize="26sp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/netList_item_image"
        android:layout_toEndOf="@+id/netList_item_image"
        android:layout_toLeftOf="@+id/netList_item_signal"
        android:layout_toStartOf="@+id/netList_item_signal"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/netList_item_signal"
        android:layout_gravity="end"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_height="match_parent"
        android:layout_width="64dp"
        android:src="@drawable/button_net_wifi" />

</RelativeLayout>
